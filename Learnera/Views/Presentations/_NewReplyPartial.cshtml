@model Learnera.Models.Reply

<li class="h5 mb-4 bg-light rounded p-3 border row" style="border-color: ghostwhite">
    <div class="d-flex flex-column align-items-center justify-content-between" style="width:4%;">
        <button class="btn btn-link p-0 upVoteModel" onclick="Voted(this)" id="@Model.Id"><img src="../../Content/Images/sort-up.png" style="height: 10px; width: 15px"></button>
        <span class="numberOfLikes display-5" style="margin:0">@Model.LikesCount</span>
        <button class="btn btn-link p-0 downVoteModel" onclick="Voted(this)" id="@Model.Id"><img src="../../Content/Images/sort-down.png" style="height: 10px; width: 15px"></button>
    </div>
    <div style="width:94%; padding-left: 10px">
        <h4 class="text-info">@Model.Author.Name  @Model.Author.LastName</h4>
        <h4 class="text-dark ">@Model.Text</h4>
    </div>
</li>
